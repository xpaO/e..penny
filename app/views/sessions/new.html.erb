<% provide(:title, "Sign in") %>
<div class="row">
  <div class="large-6 large-offset-1 columns">
    <h1>Sign in</h1>
    <%= form_tag sessions_path do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Sign in", 
                      class: "button radius" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>